<?xml version="1.0"?>
<ruleset name="Coding standard">
    <description>Coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="cache" value="var/.phpcs.json"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="1000N"/>
            <property name="absoluteLineLimit" value="1000"/>
        </properties>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>src/migrations</exclude-pattern>
        <exclude-pattern>src/modules/block/migrations</exclude-pattern>
        <exclude-pattern>src/modules/blog/migrations</exclude-pattern>
        <exclude-pattern>src/modules/comment/migrations</exclude-pattern>
        <exclude-pattern>src/modules/file/migrations</exclude-pattern>
        <exclude-pattern>src/modules/landing/migrations</exclude-pattern>
        <exclude-pattern>src/modules/page/migrations</exclude-pattern>
        <exclude-pattern>src/modules/portfolio/migrations</exclude-pattern>
        <exclude-pattern>src/modules/user/migrations</exclude-pattern>
    </rule>

    <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
        <exclude-pattern>src/migrations</exclude-pattern>
        <exclude-pattern>src/modules/block/migrations</exclude-pattern>
        <exclude-pattern>src/modules/blog/migrations</exclude-pattern>
        <exclude-pattern>src/modules/comment/migrations</exclude-pattern>
        <exclude-pattern>src/modules/file/migrations</exclude-pattern>
        <exclude-pattern>src/modules/landing/migrations</exclude-pattern>
        <exclude-pattern>src/modules/page/migrations</exclude-pattern>
        <exclude-pattern>src/modules/portfolio/migrations</exclude-pattern>
        <exclude-pattern>src/modules/user/migrations</exclude-pattern>
    </rule>

    <!-- Paths to check -->
    <file>bin</file>
    <file>config</file>
    <file>public/index.php</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>src/extensions/markdown/markdown/*</exclude-pattern>
    <exclude-pattern>src/extensions/markdown/TextHighlighter/*</exclude-pattern>
</ruleset>
