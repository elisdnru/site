{
    "name": "elisdnru/site",
    "description": "",
    "version": "1.0.0",
    "type": "project",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.5",
        "ext-PDO": "^8.5",
        "ext-curl": "^8.5",
        "ext-dom": "20031129",
        "ext-fileinfo": "^8.5",
        "ext-gd": "^8.5",
        "ext-iconv": "^8.5",
        "ext-intl": "^8.5",
        "ext-mbstring": "^8.5",
        "ext-posix": "^8.5",
        "ext-xml": "^8.5",
        "codemix/yii2-streamlog": "^1.3",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-feed": "^2.26.x-dev",
        "php-http/curl-client": "^2.0",
        "psr/simple-cache": "^3.0",
        "sentry/sdk": "^4.0",
        "webmozart/assert": "^2.1",
        "yiisoft/yii2": "2.0.*-dev",
        "yiisoft/yii2-redis": "^2.0",
        "yiisoft/yii2-symfonymailer": "^4.0"
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-yii2": "^2.0",
        "dg/bypass-finals": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.0",
        "overtrue/phplint": "^9.0",
        "psalm/plugin-phpunit": "^0.19.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^6.14"
    },
    "replace": {
        "bower-asset/jquery":"*",
        "bower-asset/inputmask":"*",
        "bower-asset/punycode":"*",
        "bower-asset/yii2-pjax":"*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-icu": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-intl-messageformatter": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*",
        "symfony/polyfill-php85": "*"
    },
    "autoload": {
        "files": [
            "src/env.php",
            "src/extensions/markdown/markdown/markdown.php"
        ],
        "psr-4": {
            "app\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": [
                "tests/",
                "tests/_support"
            ]
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "yiisoft/yii2-composer": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "app": "php bin/app.php",
        "test": "codecept",
        "lint": "phplint",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php",
        "psalm": "psalm --config=psalm.xml"
    }
}
