{
    "name": "elisdn/site",
    "description": "",
    "type": "project",
    "require": {
        "php": ">7.1.0",
        "ext-PDO": "^7.1",
        "ext-curl": "^7.1",
        "ext-dom": "20031129",
        "ext-fileinfo": "^1.0",
        "ext-gd": "^7.1",
        "ext-iconv": "^7.1",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.1",
        "ext-posix": "^7.1",
        "ext-xml": "^7.1",
        "fishvision/yii2-migrate": "^1.0",
        "sentry/sdk": "^2.0.3",
        "symfony/dotenv": "^4.1",
        "yiisoft/yii": "^1.1",
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-swiftmailer": "^2.1",
        "zendframework/zend-feed": "^2.12"
    },
    "require-dev": {
        "overtrue/phplint": "^1.1",
        "phpunit/phpunit": "5.*",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "replace": {
        "bower-asset/jquery":"*",
        "bower-asset/inputmask":"*",
        "bower-asset/punycode":"*",
        "bower-asset/yii2-pjax":"*"
    },
    "autoload": {
        "classmap": [
            "src/views/skins"
        ],
        "psr-4": {
            "app\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "app": "php bin/app.php",
        "app-test": "php bin/app-test.php",
        "test": "phpunit --colors=always",
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
