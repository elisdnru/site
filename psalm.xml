<?xml version="1.0"?>
<psalm
    totallyTyped="true"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorBaseline="psalm-baseline.xml"
    autoloader="./vendor/yiisoft/yii2/Yii.php"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="src/extensions" />
            <directory name="src/views" />
            <directory name="src/modules/*/views" />
            <directory name="src/modules/*/widgets/views" />
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <stubs>
        <file name="./psalm/yii/base/Application.php"/>
        <file name="./psalm/yii/base/Controller.php"/>
    </stubs>

    <issueHandlers>
        <LessSpecificReturnType errorLevel="info" />

        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <file name="src/components/category/models/CategoryQuery.php"/>
                <file name="src/components/category/models/TreeCategoryQuery.php"/>
                <file name="src/components/category/TreeActiveDataProvider.php"/>
                <directory name="src/modules/*/models/query"/>
                <file name="src/modules/user/components/CurrentPasswordValidator.php"/>
                <file name="src/widgets/IconMenu.php"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>
</psalm>
