# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
tab_width = 4
indent_size = 4

[*.html]
tab_width = 4
indent_size = 4

[*.xml]
tab_width = 4
indent_size = 4

[*.json]
tab_width = 4
indent_size = 4

[*.yml]
tab_width = 4
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
trim_trailing_whitespace = false
