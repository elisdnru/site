FROM php:7.4-fpm-alpine

RUN apk update

RUN apk add libmcrypt-dev autoconf g++ make \
    && pecl install -o -f mcrypt && rm -rf /tmp/pear \
    && docker-php-ext-enable mcrypt

RUN apk add mariadb-client libjpeg-turbo-dev libpng-dev libwebp-dev freetype-dev \
    && docker-php-ext-configure gd \
        --with-jpeg \
        --with-webp \
        --with-freetype \
    && docker-php-ext-install pdo_mysql gd

COPY ./php/conf.d /usr/local/etc/php/conf.d

WORKDIR /app
